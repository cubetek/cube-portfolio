{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    // Strict mode settings for better type safety
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Added for safer array/object access
    
    // Code quality settings
    "noUnusedLocals": false, // Disabled for development flexibility
    "noUnusedParameters": false, // Disabled for development flexibility
    
    // Additional safety checks
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    
    // Modern JavaScript features
    "useUnknownInCatchVariables": true, // Use unknown instead of any in catch clauses
    
    // Better error messages
    "noErrorTruncation": true
  }
}
