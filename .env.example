# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local for development or .env for general use
# NEVER commit actual API keys or secrets to version control
# =============================================================================

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
# Environment type: development, staging, production
NODE_ENV=development
NUXT_ENV_ENVIRONMENT=development

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Site URL (Build-time and Runtime)
# Used for SEO, sitemap generation, and absolute URLs
NUXT_PUBLIC_SITE_URL=http://localhost:3000
NUXT_PUBLIC_SITE_NAME="Your Personal Website"
NUXT_PUBLIC_SITE_DESCRIPTION="Personal portfolio and blog website"

# API Configuration
NUXT_PUBLIC_API_BASE=/api
NUXT_API_SECRET=your-secret-api-key-here

# =============================================================================
# CONTENT & CMS CONFIGURATION
# =============================================================================

# Nuxt Content Configuration
NUXT_CONTENT_STUDIO_ENABLED=false
NUXT_CONTENT_STUDIO_API=https://api.nuxt.studio

# Database Configuration (if using database features)
DATABASE_URL=file:./dev.db
DATABASE_AUTH_TOKEN=

# =============================================================================
# THIRD-PARTY INTEGRATIONS & API KEYS
# =============================================================================

# Email Service (Contact Forms)
# Choose one email service provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Alternative: SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Alternative: Resend
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Newsletter Service (Optional)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your-list-id

# Alternative: ConvertKit
CONVERTKIT_API_KEY=your-convertkit-api-key
CONVERTKIT_FORM_ID=your-form-id

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager
NUXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Umami Analytics (Privacy-focused alternative)
NUXT_PUBLIC_UMAMI_WEBSITE_ID=your-umami-id
NUXT_PUBLIC_UMAMI_URL=https://analytics.umami.is

# Plausible Analytics
NUXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com
NUXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.io

# =============================================================================
# SOCIAL MEDIA & SHARING
# =============================================================================

# Social Media URLs (for footer links)
NUXT_PUBLIC_GITHUB_URL=https://github.com/yourusername
NUXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/yourusername
NUXT_PUBLIC_TWITTER_URL=https://twitter.com/yourusername
NUXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/yourusername

# Social Sharing
NUXT_PUBLIC_TWITTER_HANDLE=@yourusername

# =============================================================================
# SEARCH & CONTENT FEATURES
# =============================================================================

# Algolia Search (if implementing search)
ALGOLIA_APPLICATION_ID=your-app-id
ALGOLIA_ADMIN_API_KEY=your-admin-key
NUXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-search-key
NUXT_PUBLIC_ALGOLIA_INDEX_NAME=your-index

# Comments System (Disqus alternative)
NUXT_PUBLIC_GISCUS_REPO=owner/repo
NUXT_PUBLIC_GISCUS_REPO_ID=your-repo-id
NUXT_PUBLIC_GISCUS_CATEGORY=General
NUXT_PUBLIC_GISCUS_CATEGORY_ID=your-category-id

# =============================================================================
# IMAGE & MEDIA SERVICES
# =============================================================================

# Cloudinary (Image optimization & management)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Alternative: Uploadcare
UPLOADCARE_PUBLIC_KEY=your-public-key
UPLOADCARE_SECRET_KEY=your-secret-key

# =============================================================================
# CDN & PERFORMANCE
# =============================================================================

# CDN Configuration
NUXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# Image optimization service
NUXT_PUBLIC_IMAGE_DOMAINS=images.unsplash.com,via.placeholder.com

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration (if implementing auth)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_DOMAIN=yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

# Sentry Error Tracking
NUXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# LogRocket Session Replay
NUXT_PUBLIC_LOGROCKET_APP_ID=your-app-id

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================

# Vercel Configuration
VERCEL_URL=
VERCEL_REGION=
VERCEL_ENV=

# Netlify Configuration
NETLIFY_SITE_ID=
CONTEXT=
DEPLOY_PRIME_URL=
URL=

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Flags
DEBUG=false
NUXT_DEBUG=false
NITRO_DEBUG=false

# Development Features
NUXT_DEVTOOLS_ENABLED=true
NUXT_UI_PRO_LICENSE=

# Bundle Analysis
ANALYZE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
NUXT_PUBLIC_FEATURE_BLOG=true
NUXT_PUBLIC_FEATURE_PROJECTS=true
NUXT_PUBLIC_FEATURE_CONTACT_FORM=true
NUXT_PUBLIC_FEATURE_NEWSLETTER=true
NUXT_PUBLIC_FEATURE_COMMENTS=false
NUXT_PUBLIC_FEATURE_SEARCH=false
NUXT_PUBLIC_FEATURE_ANALYTICS=true
NUXT_PUBLIC_FEATURE_ERROR_TRACKING=false

# Experimental Features
NUXT_PUBLIC_EXPERIMENTAL_PWA=false
NUXT_PUBLIC_EXPERIMENTAL_OFFLINE=false

# =============================================================================
# TASK MASTER AI INTEGRATION (Optional)
# =============================================================================
# Only required if using Task Master AI CLI integration

# Task Master AI API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
PERPLEXITY_API_KEY=pplx-your-key-here
OPENAI_API_KEY=sk-proj-your-key-here
GOOGLE_API_KEY=your-google-api-key
MISTRAL_API_KEY=your-mistral-key
XAI_API_KEY=your-xai-key
AZURE_OPENAI_API_KEY=your-azure-key
OLLAMA_API_KEY=your-ollama-key
GITHUB_API_KEY=ghp-your-github-key

# =============================================================================
# ENVIRONMENT VALIDATION
# =============================================================================
# These variables are used by the environment validation system
# Do not modify unless you understand the validation logic

ENV_VALIDATION_ENABLED=true
ENV_VALIDATION_STRICT=false
ENV_VALIDATION_LOG_LEVEL=warn