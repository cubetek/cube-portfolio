{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "build:analyze": "ANALYZE=true nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "github-pages": "NUXT_PRESET=static nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:run": "vitest run",
    "vercel:dev": "vercel dev",
    "vercel:build": "nuxt build && vercel build",
    "vercel:deploy": "./scripts/vercel-deploy.sh",
    "vercel:preview": "vercel --prebuilt",
    "vercel:production": "vercel --prod --prebuilt",
    "vercel:validate": "node scripts/validate-vercel-config.js",
    "netlify:dev": "netlify dev",
    "netlify:build": "nuxt build",
    "netlify:deploy": "netlify deploy",
    "netlify:deploy:prod": "netlify deploy --prod",
    "netlify:functions:serve": "netlify functions:serve",
    "env:setup": "node scripts/setup-env.js",
    "env:validate": "node scripts/validate-env.js",
    "env:validate:dev": "node scripts/validate-env.js development",
    "env:validate:staging": "node scripts/validate-env.js staging",
    "env:validate:prod": "node scripts/validate-env.js production",
    "env:generate-secrets": "node -e \"console.log('API_SECRET=' + require('crypto').randomBytes(32).toString('hex')); console.log('JWT_SECRET=' + require('crypto').randomBytes(64).toString('base64'));\"",
    "security:audit": "npm run env:validate:prod && echo 'âœ… Security audit complete'",
    "security:check": "node scripts/validate-env.js production --strict",
    "analyze": "ANALYZE=true nuxt build",
    "analyze:serve": "npx webpack-bundle-analyzer .nuxt/stats.json",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --collect.url=http://localhost:3000 --upload.target=temporary-public-storage",
    "lighthouse:desktop": "lighthouse http://localhost:3000 --preset=desktop --output=html --output-path=./lighthouse-desktop.html",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --preset=mobile --output=html --output-path=./lighthouse-mobile.html",
    "perf:monitor": "node scripts/performance-monitor.js",
    "perf:report": "node scripts/generate-performance-report.js",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "health:check:staging": "curl -f $STAGING_URL/api/health || exit 1",
    "health:check:prod": "curl -f $PRODUCTION_URL/api/health || exit 1"
  },
  "dependencies": {
    "@netlify/edge-functions": "^2.15.6",
    "@nuxt/content": "^3.6.3",
    "@nuxt/image": "^1.10.0",
    "@nuxt/kit": "^3.17.7",
    "@nuxt/ui": "^3.2.0",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/i18n": "^9.5.6",
    "@nuxtjs/mdc": "^0.17.0",
    "@nuxtjs/robots": "^5.4.0",
    "@nuxtjs/seo": "^3.1.0",
    "@nuxtjs/sitemap": "^7.4.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/prismjs": "^1.26.5",
    "better-sqlite3": "^12.2.0",
    "fuse.js": "^7.1.0",
    "nuxt": "^3.17.6",
    "prismjs": "^1.30.0",
    "tailwindcss": "^4.1.11",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.2",
    "@iconify-json/simple-icons": "^1.2.42",
    "@lhci/cli": "^0.15.1",
    "@nuxt/devtools": "^2.6.2",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.12",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
